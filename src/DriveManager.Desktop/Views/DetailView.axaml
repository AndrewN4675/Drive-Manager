<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DriveManager.Desktop.Views.DetailView">
    <Grid Margin="30">
        <StackPanel Spacing="15">
            <TextBlock Text="{Binding Title}"
                       FontSize="24"
                       FontWeight="Bold" />
            
            <Separator />
            
            <TextBlock Text="Details:" FontSize="16" FontWeight="SemiBold" />
            
            <TextBlock Text="{Binding Info1}" Margin="10,0,0,0" />
            <TextBlock Text="{Binding Info2}" Margin="10,0,0,0" />
            <TextBlock Text="{Binding Info3}" Margin="10,0,0,0" />
            
            <Separator Margin="0,10" />
            
            <TextBlock Text="Statistics:" FontSize="16" FontWeight="SemiBold" />
            
            <TextBlock Text="{Binding Stat1}" Margin="10,0,0,0" />
            <TextBlock Text="{Binding Stat2}" Margin="10,0,0,0" />
            <TextBlock Text="{Binding Stat3}" Margin="10,0,0,0" />
            
            <Button Content="Back to Drives"
                    Command="{Binding BackCommand}"
                    Margin="0,20,0,0"
                    Padding="15,8" />
        </StackPanel>
    </Grid>
</UserControl>