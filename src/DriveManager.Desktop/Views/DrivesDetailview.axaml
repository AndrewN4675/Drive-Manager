<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DriveManager.Views.DriveDetailView">
    
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="2*,*">
        <!-- Header -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="10">
            <TextBlock Text="{Binding SelectedDrive.Label}" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedDrive.FormattedUsed}" FontSize="14"/>
        </StackPanel>

        <!-- Folder List (2/3) -->
        <ListBox Grid.Row="1" Grid.Column="0" Items="{Binding Folders}" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding FormattedSize}" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Pie Chart Placeholder (1/3) -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <TextBlock Text="Pie Chart" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>